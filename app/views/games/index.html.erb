<div id="games">
  <h2><%= t "layout.games" %></h2>
 <a href="/admin/games/new" class="btn btn-default pull-right" >
    <i class="fa fa-plus" aria-hidden="true"></i></a>
  <table class="table table-striped" id="tbl-list-games">
    <thead>
      <tr>
        <th class="id"><%= t "games.table.id" %></th>
        <th class="name"><%= t "games.table.name" %></th>
        <th class="description"><%= t "games.table.description" %></th>
        <th class="action"><%= t "games.table.action" %></th>
      </tr>
    </thead>
    <% @games.each.with_index do |game, index| %>
      <tr>
        <td class="id"><%= index + 1 %></td>
        <td class="name"><%= game.name %></td>
        <td class="description"><%= game.description %></td>
        <td class="action">
          <a href="<%= edit_admin_game_path game %>" class="btn btn-primary btn-xs">
            <i class="fa fa-pencil" aria-hidden="true"></i></a>
          <a href="<%= admin_game_path game %>",
            data-method="delete", data-confirm="<%= t "confirm.delete" %>" class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-remove"></span>
          </a>
        </td>
      </tr>
    <% end %>
  </table>
</div>

